<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KtuPascoHub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background</item>
        <item name="cornerRadius">@dimen/dimen_4</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/dimen_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxWidth">300dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="SignInWithGoogle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="iconTint">@null</item>
    </style>
</resources>