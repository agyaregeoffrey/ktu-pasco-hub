<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextCaption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardTextCaption" parent="BodyText">
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardText" parent="BodyText">
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AppNameText" parent="TextCaption">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ProfileImageCard">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="ProfileNameInitialStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:padding">@dimen/dimen_20</item>
        <item name="rippleColor">@color/gray</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>